mixin right_box(cls)
  - var n = 1
  //- var txts = ['one', 'two', 'three', 'four', 'five', 'six', 'seven', 'eight']
  .right.container(class=cls)
    while n <= 8
      .item= n++

doctype html
html
  head
    meta(charset="utf-8")
    meta(
      name="viewport",
      content="width=device-width, initial-scale=1"
    )
    meta(
      name="description",
      content="A CSS Flexbox tutorial in Chinese"
    )
    title CSS Flexbox
    link(rel='stylesheet', href='style.css')
  body
    include intro
    include main
    script(src='app.js')
    include footer
